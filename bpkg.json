{
  "name": "bpkg/bpkg.github.io",
  "description": "Homepage for the bpkg project ",
  "commands": {
    "create":  "mkdir .jekyll-cache; mkdir _site",
    "build":   "jekyll build $@",
    "clean":   "rm -Rf .jekyll-cache/* _site/*",
    "preview": "rake preview",
    "post":    "rake post $@",
    "page":    "rake page $@"
  }
}
